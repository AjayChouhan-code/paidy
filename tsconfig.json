{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "@components": ["components"],
      "@types": ["types"],
      "@utils": ["utils"],
      "@theme": ["theme"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "components",
    "types",
    "utils",
    "theme"
  ]
}
